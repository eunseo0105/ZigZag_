<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag41Activity"
    android:background="#25262B">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/best1"
                android:layout_width="wrap_content"
                android:layout_height="226dp"
                android:layout_weight="1"
                android:src="@drawable/best1"
                android:scaleType="fitXY"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="226dp"
                android:layout_weight="1"
                android:src="@drawable/best2"
                android:layout_marginLeft="10dp"
                android:id="@+id/best2"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01 \n__________________________\n디아브\n [MADE:자체제작] 역대급\n 27,000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="02\n_______________________\n라룸\n여리여리 원피스\n 34,000"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/best3"
            android:layout_width="wrap_content"
            android:layout_height="226dp"
            android:layout_weight="1"
            android:src="@drawable/best3"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="226dp"
            android:layout_weight="1"
            android:src="@drawable/best4"
            android:layout_marginLeft="10dp"
            android:id="@+id/best4"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="03\n__________________________\n육육걸즈\n [MADE:자체제작] 역대급\n 21,000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="04\n_______________________\nMOAT\n린넨 슬랙스바지\n 31,000"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>


